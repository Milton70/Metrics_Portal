<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@user.errors.count, "error") %> found with your input:</h2>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>	
		</ul>
	</div>
<% end %>
<%= form_for(@user) do |f| %>
	<div class="container">    
		<div class="col-md-10 col-md-offset-1">
		  <div class="panel panel-default">
		    <div class="panel-heading">
		      <div class="row">
		        <div class="col col-xs-6">
		          <h3 class="panel-title">Add New User</h3>
		        </div>
		      </div>
		    </div>
		    <div class="panel-body">
		      <table class="table table-striped table-bordered table-list">
		        <thead>
		          <tr>
		            <th>User Id</th>
		            <th>Name</th>
		            <th>Email</th>
		            <th>Admin</th>
		          </tr> 
		        </thead>
		        <tbody>
		        	<tr class="form-group">
		        		<td><%= f.text_field :user_id, class: "form-control", placeholder: "EBRD Windows Id" %></td>
		        		<td><%= f.text_field :user_name, class: "form-control", placeholder: "e.g. Joe Bloggs" %></td>
		        		<td><%= f.text_field :user_email, class: "form-control", placeholder: "e.g. userid@ebrd.com" %></td>
		        		<td>
		        			<select name="role" id="role" class="form-control">
		        				<option value="1">Admin</option>
		        				<option value="2">Viewer</option>
		        			</select>
		        		</td>
		        	</tr>
		        </tbody>
		      </table>
		    </div>
		    <div class="panel-footer">
		      <div class="row">
		      	<div class="col-md-12" data-turbolinks="false">
		      		<%= f.submit "Create", class: "btn btn-sm btn-primary pull-right" %>
		      	</div>
		    	</div>
		  	</div>
			</div>
		</div>
	</div>
<% end %>